@model FurnitureStore.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form method="post"  enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
     @{
            if ((Model.Avatar == null)||(Model.Avatar ==""))
        {
            <img class="img-thumbnail" width="350" height="300" src="~/users/Avatar.png" id="image" />
            <input type="file" name="pic" onchange="readURL(this);" />
        }
        else
        {
            <img class="img-thumbnail" width="350" height="300" src="@Model.Avatar" id="image" />
            <input type="file" name="pic" onchange="readURL(this,'#image');" />
        }
    }   
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group" hidden>
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SurName" class="control-label">Фамилия</label>
        <input type="text" asp-for="SurName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="control-label">Отчество</label>
        <input type="text" asp-for="MiddleName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Адрес</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-success" />
    </div>
</form>